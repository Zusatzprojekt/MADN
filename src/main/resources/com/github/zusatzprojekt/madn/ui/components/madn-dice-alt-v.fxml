<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="200.0" type="javafx.scene.layout.Pane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!--Border-->
    <Rectangle arcHeight="16.0" arcWidth="16.0" fill="#DBA356" height="200.0" stroke="#5E5E5E" strokeType="INSIDE" strokeWidth="4.0" width="200.0" />

    <!--Würfelersatz-->
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="5.0">
        <Label text="Gewürfelt:">
            <font>
                <Font name="Arial" size="38.0" />
            </font>
        </Label>
        <Label fx:id="altText" text="1">
            <font>
                <Font name="Arial Bold" size="40.0" />
            </font>
        </Label>
        <Button fx:id="altBtn" focusTraversable="false" onMouseClicked="#onDiceClicked" prefHeight="45.0" prefWidth="120.0" text="Würfeln">
            <font>
                <Font name="Arial" size="22.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
            <VBox.margin>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </VBox.margin>
        </Button>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>
</fx:root>
