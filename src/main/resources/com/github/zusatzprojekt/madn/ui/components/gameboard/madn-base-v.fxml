<?xml version="1.0" encoding="UTF-8"?>

<?import com.github.zusatzprojekt.madn.ui.components.gameboard.MadnFieldV?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<fx:root xmlns:fx="http://javafx.com/fxml" type="javafx.scene.Group" xmlns="http://javafx.com/javafx">

    <!--Basis-Felder-->
    <Pane fx:id="fieldContainer" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
        <MadnFieldV layoutX="0.0" layoutY="0.0" smallField="true"/>
        <MadnFieldV layoutX="85.0" layoutY="0.0" smallField="true"/>
        <MadnFieldV layoutX="0.0" layoutY="85.0" smallField="true"/>
        <MadnFieldV layoutX="85.0" layoutY="85.0" smallField="true"/>
    </Pane>

    <!--Beschriftung-->
    <StackPane fx:id="textContainer" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="145.0" prefWidth="145.0" mouseTransparent="true">
        <Text fx:id="baseText" boundsType="VISUAL" text="B" textOrigin="CENTER">
            <font>
                <Font name="Arial Bold" size="50.0"/>
            </font>
        </Text>
    </StackPane>
</fx:root>
